{{ define "content" }}
<div class="col">
    <h6><a href="/clusters">Clusters</a> > {{ .Cluster.Name }}</h6>
    <h1>Cluster details</h1>
    <dl class="inline">
      <dt class="inline">Hosts number</dt>
      <dd class="inline">{{ .Cluster.Crmmon.Summary.Nodes.Number }}</dd>
      <dt class="inline">Resource number</dt>
      <dd class="inline">{{ .Cluster.Crmmon.Summary.Resources.Number }}</dd>
      {{- range .Cluster.Cib.Configuration.CrmConfig.ClusterProperties }}
      <dt class="inline">{{ .Id }}</dt>
      <dd class="inline">{{ .Value }}</dd>
      {{- end }}
    </dl>
    <hr/>
    <p class='clearfix'/>
    <h2>Rulesets</h2>
    <div class="rulesets">
      <script>
        $(document).ready(function(){
          $('.selectpicker').selectpicker("val", {{ .Rulesets.GetEnabled.GetPaths }});
          $('#clean').click(function(){
            $('.selectpicker').selectpicker("deselectAll")
          });
        });
      </script>
      <form method="POST" action="/clusters/{{ .Cluster.Name }}">
        <select name="rulesets[]" id="rulesets" class="selectpicker" multiple data-selected-text-format="count > 3" data-actions-box="true" title="Checks">
          {{- range .Rulesets }}
          <option value="{{ .Path }}">{{ .Path }}</option>
          {{- end }}
        </select>

        <button type='submit' class='btn btn-icon btn-secondary' data-toggle='tooltip' title='Apply checks'>
            <i class='eos-icons eos-18'>autorenew</i>
        </button>
        <button id="clean" class='btn btn-icon btn-secondary' data-toggle='tooltip' title='Reset checks'>
            <i class='eos-icons eos-18'>cleanup</i>
        </button>
      </form>
    </div>
    <hr/>
    <p class='clearfix'/>
    <h2>Hosts</h2>
    {{ template "hosts_table" . }}
    <hr/>
    <p class='clearfix'/>
    <h2>Node attributes</h2>
    {{- range .Cluster.Crmmon.NodeAttributes.Nodes }}
    <h2>{{ .Name }}</h2>
    <dl class="inline">
      {{- range .Attributes }}
      <dt class="inline">{{ .Name }}</dt>
      <dd class="inline">{{ .Value }}</dd>
      {{- end }}
    </dl>
    {{- end }}
    <hr/>
    <p class='clearfix'/>
    <h2>Resources</h2>
    <div class='table-responsive'>
        <table class='table eos-table'>
            <thead>
                <tr>
                    {{- range .Cluster.Crmmon.Nodes }}
                    <th scope='col'>{{ .Name }}{{ if .DC }} ( DC ){{ end }}</th>
                    {{- end }}
                    <th scope='col'>Not running</th>
                </tr>
            </thead>
            <tbody>
              {{- $Cluster := .Cluster }}
              {{- range .Cluster.Crmmon.Resources }}
              {{- $Resource := . }}
              <tr>
                {{- $Found := false }}
                {{- range $Index, $Node := $Cluster.Crmmon.Nodes }}
                {{- if eq $Resource.Node.Name $Node.Name }}
                {{- $Found = true }}
                <td><span class='badge badge-pill badge-primary'>{{ $Resource.Id }}</span><span class='badge badge-pill badge-info'>{{ $Resource.Agent }}</span></td>
                {{- else }}
                <td></td>
                {{- end }}
                {{- end }}
                {{- if not $Found }}
                {{- $Found = false }}
                <td><span class='badge badge-pill badge-danger'>{{ $Resource.Id }}</span><span class='badge badge-pill badge-info'>{{ $Resource.Agent }}</span></td>
                {{- else }}
                <td></td>
                {{- end }}
              </tr>
              {{- end }}
              {{- range .Cluster.Crmmon.Clones }}
              {{- range .Resources }}
              {{- $Resource := . }}
              <tr>
                {{- $Found := false }}
                {{- range $Index, $Node := $Cluster.Crmmon.Nodes }}
                  {{- if eq $Resource.Node.Name $Node.Name }}
                    {{- $Found = true }}
                    <td><span class='badge badge-pill badge-primary'>{{ $Resource.Id }}</span><span class='badge badge-pill badge-info'>{{ $Resource.Agent }}</span><span class='badge badge-pill badge-info'>Clone</span>{{ if or (eq $Resource.Role "Master") (eq $Resource.Role "Slave") }}<span class='badge badge-pill badge-info'>{{ $Resource.Role }}</span>{{ end }}</td>
                  {{- else }}
                    <td></td>
                  {{- end }}
                {{- end }}
                {{- if not $Found }}
                  {{- $Found = false }}
                  <td><span class='badge badge-pill badge-danger'>{{ $Resource.Id }}</span><span class='badge badge-pill badge-info'>{{ $Resource.Agent }}</span></td>
                {{- else }}
                  <td></td>
                {{- end }}
              </tr>
              {{- end }}
              {{- end }}
            </tbody>
        </table>
    </div>
</div>
{{- end }}
